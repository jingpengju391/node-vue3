{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/**/*",
        "src/shared/**/*",
        "src/shared/*",
        "src/util/**/*",
        "src/renderer/utils/**/*",
        "src/lib/**/*",
        "src/server/**/*",
        "src/service/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/renderer/*"],
            "@components/*": ["src/renderer/components/*"],
            "@components": ["src/renderer/components/index"],
            "@shared/*": ["src/shared/*"],
            "@shared": ["src/shared/index"],
            "@lib": ["src/lib/index"],
            "@lib/*": ["src/lib/*"],
            "@util/*": ["src/util/*"],
            "@util": ["src/util/index"],
            "@assets/*": ["src/renderer/assets/*"],
            "@directives/*": ["src/renderer/directives/*"],
            "@stores/*": ["src/renderer/stores/*"],
            "@stores": ["src/renderer/stores"],
            "@utils/*": ["src/renderer/utils/*"],
            "@utils": ["src/renderer/utils/index"],
            "@hooks/*": ["src/renderer/hooks/*"],
            "@server/*": ["src/server/*"],
            "@service/*": ["src/service/*"]
        }
    }
}
