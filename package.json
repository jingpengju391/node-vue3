{
	"name": "tcmt",
	"version": "2.0.0",
	"description": "An Electron application with Vue and TypeScript",
	"main": "./out/main/index.js",
	"author": "aojiaoshou",
	"homepage": "https://electron-vite.org",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "pnpm typecheck:node && pnpm typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
		"build": "pnpm typecheck && electron-vite build",
		"build:test": "pnpm typecheck && electron-vite build --mode test",
		"postinstall": "electron-builder install-app-deps",
		"build:unpack": "pnpm build && electron-builder --dir",
		"build:win": "pnpm build && electron-builder --win",
		"build:win:test": "pnpm build:test && electron-builder --win",
		"build:mac": "pnpm build && electron-builder --mac",
		"build:linux": "pnpm build && electron-builder --linux",
		"build:linux:test": "pnpm build:test && electron-builder --linux",
		"preinstall": "npx only-allow pnpm",
		"build:linux:win": "docker-compose -f docker/docker-compose.yml up --build",
		"cyp:unit": "cypress run",
		"test:unit": "jest --verbose",
		"postinstall:arm": "electron-builder install-app-deps --arch=arm64",
		"build:arm": "pnpm install --ignore-scripts --frozen-lockfile && pnpm postinstall:arm && electron-vite build",
		"build:arm:test": "pnpm install --ignore-scripts --frozen-lockfile && pnpm postinstall:arm && electron-vite build --mode test",
		"build:arm64:test": "pnpm build:arm:test && electron-builder --linux --arm64",
		"build:arm64:prod": "pnpm build:arm && electron-builder --linux --arm64",
		"build:arm64:test:local": "git pull && pnpm build:arm:test && electron-builder --linux --arm64",
		"build:arm64:prod:local": "git pull && pnpm build:arm && electron-builder --linux --arm64"
	},
	"dependencies": {
		"adm-zip": "^0.5.16",
		"axios": "^1.7.7",
		"axios-retry": "^4.5.0",
		"cheerio": "^1.0.0",
		"chinese-to-pinyin": "^1.3.1",
		"electron-log": "^5.2.4",
		"figlet": "1.7.0",
		"fs-extra": "^11.3.0",
		"json-bigint": "^1.0.0",
		"knex": "^3.1.0",
		"moment": "^2.30.1",
		"mqtt": "^5.10.3",
		"node-cron": "^3.0.3",
		"node-disk-info": "^1.3.0",
		"node-wifi": "^2.0.16",
		"pinia-plugin-persistedstate": "^4.2.0",
		"sqlite3": "^5.1.7",
		"xml2js": "^0.6.2"
	},
	"devDependencies": {
		"@electron-toolkit/eslint-config": "^1.0.2",
		"@electron-toolkit/eslint-config-ts": "^2.0.0",
		"@electron-toolkit/preload": "^3.0.0",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"@element-plus/icons-vue": "^2.3.1",
		"@iconify-json/ep": "^1.2.1",
		"@rollup/plugin-terser": "^0.4.4",
		"@rushstack/eslint-patch": "^1.10.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/jest": "^29.5.14",
		"@types/node": "^20.14.8",
		"@types/node-wifi": "^2.0.2",
		"@types/xml2js": "^0.4.14",
		"@vant/auto-import-resolver": "^1.2.1",
		"@vitejs/plugin-vue": "^5.0.5",
		"@vue/eslint-config-prettier": "^9.0.0",
		"@vue/eslint-config-typescript": "^13.0.0",
		"@vue/test-utils": "^2.4.6",
		"@x-ui-vue3/skeleton": "^1.0.2",
		"bufferutil": "^4.0.9",
		"cypress": "^13.17.0",
		"echarts": "^5.6.0",
		"echarts-gl": "^2.0.9",
		"electron": "31.3.1",
		"electron-builder": "^24.13.3",
		"electron-vite": "^2.3.0",
		"element-plus": "^2.9.8",
		"element-resize-detector": "^1.2.4",
		"eslint": "^8.57.0",
		"eslint-plugin-vue": "^9.26.0",
		"jest": "^29.7.0",
		"jsqr": "^1.4.0",
		"only-allow": "^1.2.1",
		"pinia": "^2.2.5",
		"prettier": "^3.3.2",
		"rollup-plugin-visualizer": "^5.14.0",
		"sass": "^1.80.3",
		"sass-loader": "^16.0.2",
		"simple-keyboard": "^3.8.30",
		"simple-keyboard-layouts": "^3.4.55",
		"sortablejs": "^1.15.6",
		"ts-jest": "^29.2.5",
		"typescript": "5.5.2",
		"unplugin-auto-import": "^0.18.3",
		"unplugin-icons": "^0.19.3",
		"unplugin-vue-components": "^0.27.4",
		"utf-8-validate": "^6.0.5",
		"vant": "^4.9.15",
		"vite": "^5.3.1",
		"vite-plugin-inspect": "^0.8.7",
		"vite-plugin-lazy-import": "^1.0.7",
		"vite-plugin-svg-icons": "^2.0.1",
		"vitest": "^3.0.9",
		"vue": "^3.5.12",
		"vue-router": "^4.4.5",
		"vue-tsc": "^2.0.22",
		"vxe-table": "^4.10.15"
	},
	"pnpm": {
		"patchedDependencies": {
			"sqlite3@5.1.7": "patches/sqlite3@5.1.7.patch"
		}
	}
}
